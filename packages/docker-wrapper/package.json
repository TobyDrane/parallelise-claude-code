{
  "name": "@claude-code-docker/docker-wrapper",
  "version": "0.0.1",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "docker:build": "docker build -f Dockerfile -t claude-code-wrapper ../..",
    "docker:run": "docker run -it --rm -e REPO_URL -e TASK -e WS_SERVER -e GITHUB_TOKEN claude-code-wrapper",
    "test": "vitest run --reporter=verbose --passWithNoTests"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "pino": "^8.17.2",
    "simple-git": "^3.28.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/ws": "^8.18.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
